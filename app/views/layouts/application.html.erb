<!DOCTYPE html>
<html>
  <head>
    <title>MiniCapstoneClient</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="background-color">
    <a href="/client/products">Home</a>
    <a href="/client/products/new">New Product</a>
    <a href="/signup">Sign Up</a>
    <a href="/login">Log In</a>
    <a href="/logout" data-method="delete">Log Out</a>
    <a href="/client/carted_products">My Cart</a>

    <% flash.each do |name, message| %>
      <p><%= message %></p>
    <% end %>
    
    <%= yield %>
  </body>
</html>
