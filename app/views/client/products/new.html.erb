<%= form_tag "/client/products", method: :post do %>
  <div>
    Name: <input type="text" name="name" />
  </div>
  <div>
    Price: <input type="text" name="price" />
  </div>
  <div>
    Description: <input type="text" name="description" />
  </div>
  <div>
    Image URL: <input type="text" name="image_url" />
  </div>
  <div>
    Supplier Id: <input type="number" name="supplier_id" />
  </div>
  <input type="submit" name="" value="Create Product" />
<% end %>